# Jira response varfile for quiet installation
sys.languageId=en
app.install.service$Boolean={{ jiraAsService }}
launch.application$Boolean=true
executeLauncherAction$Boolean=true

# Ports
{% if differentPorts == true %}
portChoice=custom
rmiPort$Long={{ rmiPort }}
httpPort$Long={{ httpPort }}
{% endif %}

# Paths
existingInstallationDir={{ jira_installation_folder }}
sys.installationDir={{ jira_installation_folder }}
app.jiraHome={{ jiraHomePath }}

# Backup/Upgrade or Full Installation
{% if jiraFolder.stat.exists == true %}
backupJira$Boolean=true
sys.confirmedUpdateInstallationString=true
{% else %}
backupJira$Boolean=false
sys.confirmedUpdateInstallationString=false
{% endif %}



